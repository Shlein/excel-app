{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "semi": "off",
    "linebreak-style": ["error", "windows"],
    "indent": ["error", 4],
    "arrow-parens": "off",
    "comma-dangle": "off",
    "eol-last": "off",
    "require-jsdoc": "off",
    "operator-linebreak": "off",
    "max-len": "off"
  },
  "plugins": ["jest"],
  "extends": ["eslint:recommended", "google"]
}